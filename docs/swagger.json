{
    "swagger": "2.0",
    "info": {
        "description": "This handles the game logic and communication",
        "title": "quipNotes Server",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8081",
    "paths": {
        "/game/draw": {
            "post": {
                "description": "Draws Tiles (words) for a given player and a given count",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Draws Tiles",
                "parameters": [
                    {
                        "description": "tells how many tiles to draw",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/game.DrawTilesRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/game.WordsResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/game/submit": {
            "post": {
                "description": "Send a string array to turn in your words for the game.",
                "consumes": [
                    "application/json"
                ],
                "summary": "Turn in Note",
                "parameters": [
                    {
                        "description": "contains the note",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/game.SubmitNoteRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/player/:id/tiles": {
            "get": {
                "description": "Gets all the tiles that are drawn by the player.",
                "produces": [
                    "application/json"
                ],
                "summary": "Gets Drawn Tiles",
                "parameters": [
                    {
                        "type": "string",
                        "description": "player id",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/game.WordsResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/players": {
            "post": {
                "description": "Adds a player to the game. The playerId must be unique.",
                "consumes": [
                    "application/json"
                ],
                "summary": "Adds a player to the game",
                "parameters": [
                    {
                        "description": "contains the player id",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/game.AddPlayerRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/players/:id": {
            "delete": {
                "description": "Deletes a player from the game. The playerId must exist.",
                "summary": "Deletes a player",
                "parameters": [
                    {
                        "type": "string",
                        "description": "player id",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/game.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "game.AddPlayerRequest": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                }
            }
        },
        "game.DrawTilesRequest": {
            "type": "object",
            "properties": {
                "count": {
                    "type": "integer"
                },
                "id": {
                    "type": "string"
                }
            }
        },
        "game.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "game.SubmitNoteRequest": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "note": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "game.WordsResponse": {
            "type": "object",
            "properties": {
                "words": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}